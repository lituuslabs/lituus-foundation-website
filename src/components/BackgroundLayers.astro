---
// Background layers with animated fog and noise texture
import AnimatedClouds from './AnimatedClouds.astro';
import AnimatedGrid from './AnimatedGrid.astro';
---

<div class="fixed inset-0 z-0">
  <!-- Background Image: Pink Mountain Dawn -->
  <div class="absolute inset-0 bg-[url('/images/mountain-ranges.webp')] bg-cover bg-center"></div>

  <!-- Animated Cloud Layers -->
  <AnimatedClouds />

  <!-- Golden Ratio Grid Overlay -->
  <AnimatedGrid />
</div>
